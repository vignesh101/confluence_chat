# LLM / OpenAI-compatible
OPENAPI_BASE_URL=https://api.openai.com/v1
API_KEY=sk-...
MODEL_NAME=gpt-4o-mini
EMBEDDINGS_MODEL_NAME=text-embedding-3-small
TEMPERATURE=0.2

# Confluence
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
# For Cloud: you can either set email + token separately, or set ACCESS_TOKEN as "email:token" and omit CONFLUENCE_EMAIL
CONFLUENCE_ACCESS_TOKEN=your_email@domain.com:api_token_here
CONFLUENCE_EMAIL=
# Optional for Data Center (or when using username + password/PAT)
CONFLUENCE_USERNAME=
# Optional filters
CONFLUENCE_SPACES=
CONFLUENCE_LABELS=

# Networking
PROXY_URL=
DISABLE_SSL=false

# RAG / Vector store
# FAISS index dir (used for persistence). If not set, falls back to CHROMA_DIR or .faiss
FAISS_DIR=.faiss
# Legacy (ignored if FAISS_DIR is set):
# CHROMA_DIR=.chroma

MAX_CONFLUENCE_RESULTS=25
CHUNK_SIZE=1200
CHUNK_OVERLAP=150
TOP_K=6
MAX_CHUNKS_PER_PAGE=2
MAX_CONTEXT_CHARS=12000
USE_MULTI_QUERY=true
NUM_QUERY_VARIANTS=2
RETRIEVAL_POOL_FACTOR=4
MMR_LAMBDA=0.5
MAX_HISTORY_TURNS=10
SHOW_QUERY_DETAILS=false
